<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="lidar_model" default="vlp16_vertical" />

    <arg name="tag" default="false"/>

    <include file="$(find safer_stack)/launch/sand_mine.launch"></include>

    <include file="$(find safer_stack)/launch/spawn_husky.launch">
        <arg name="urdf_extras" value="$(find safer_stack)/urdf/$(arg lidar_model).urdf.xacro" />
    </include>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find safer_stack)/rviz/viz_lidar.rviz" output="screen"/>

    <node name="convert_pc" pkg="safer_stack" type="tf_pointclouds.py">
        <param name="only_lidar" type="bool" value="True" />
    </node>


    <!-- <group unless="$(arg tag)">
        <node pkg="safer_stack" name="interface" type="interface.py" output="screen"/>
    </group> -->

</launch>